generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  reservations Reservation[]
}

model Author {
  id        String   @id @default(cuid())
  name      String   @unique
  books     Book[]   @relation("BookAuthors")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          String        @id @default(cuid())
  title       String
  year        Int?
  authors     Author[]      @relation("BookAuthors")
  genres      String[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Reservation Reservation[]

  @@index([title])
}

model Reservation {
  id           String   @id @default(cuid())
  bookId       String
  book         Book     @relation(fields: [bookId], references: [id])
  reservedById String
  reservedBy   User     @relation(fields: [reservedById], references: [id], onDelete: Cascade)
  reservedAt   DateTime @default(now())
  dueDate      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([reservedById])
  @@index([bookId])
  @@index([bookId, dueDate])
}
